# lazy
alias vi="vim"

# misc
alias slrn="slrn -n"
alias man="LC_ALL=C LANG=C man"
alias f=finger
alias ll="ls -al"
alias ls="ls -G"

# some common folders I like to be in
alias dropbox="cd ~/Dropbox/"
alias sites="cd ~/Dropbox/Sites"

# ssh
alias sshwebfaction="ssh jackfranklin@jackfranklin.webfactional.com"


# bundle and ruby rails stuff
alias be="bundle exec"
alias bi="bundle install"

# git alises
alias ga="git add"
alias gaa="git aa"
alias gci="git ci"
alias gcm="git ci -m"
alias gco="git co"
alias gcob="git co -b"
alias gd="git diff"
alias gds="git diff --staged"
alias ghp="git checkout gh-pages && git rebase master && git push origin gh-pages && git checkout master"
alias gl="git log --pretty=format:\"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset\" --abbrev-commit"
alias gpo="git pull origin"
alias gpom="git pom"
alias gpu="git push"
alias grm="git rm"
alias gum="gco master && gpo"

# jekyll
alias js="jekyll --server"

# vagrant
alias vup="vagrant up"
alias vhalt="vagrant halt"
alias vssh="vagrant ssh"

# ctags
alias retag='ctags -R --exclude=.svn --exclude=.git --exclude=log --exclude=tmp *'

# dotfiles
alias df="cd ~/dotfiles"
alias srcz="source ~/.zshrc"

# tmux
alias td="tmux detach"
alias tnew="tmux new-session -s "
alias tattach="tmux attach-session -t "

# thanks to @phuunet for this one
# https://twitter.com/phuunet/status/339318973634052096
alias topcmds='cat ~/.zsh_history | cut -d ";" -f 2 | sed "s, .*,," | sort | uniq -c | sort -n | tail -rn 30'
