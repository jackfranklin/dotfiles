# editing and stuff
alias vi="mvim -v"

# misc
alias slrn="slrn -n"
alias man="LC_ALL=C LANG=C man"
alias f=finger
alias ll="ls -al"
alias ls="ls -G"

# some common folders I like to be in
alias dropbox="cd ~/Dropbox/"
alias sites="cd ~/Dropbox/Sites"

# ssh
alias sshwebfaction="ssh jackfranklin@jackfranklin.webfactional.com"


# bundle and ruby rails stuff
alias be="bundle exec"
alias bi="bundle install"

# git alises
alias gci="git ci"
alias gcm="git ci -m"
alias g="git st"
alias gd="git diff"
alias gpo="git pull origin"
alias ga="git add"
alias gaa="git aa"
alias gpom="git pom"
alias gco="git co"
alias gl="git log --pretty=format:\"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset\" --abbrev-commit"
alias gds="git diff --staged"
alias gpu="git push"
alias ghp="git checkout gh-pages && git rebase master && git push origin gh-pages && git checkout master"
alias grm="git rm"
alias gcob="git co -b"

# jekyll
alias js="jekyll --server"

# vagrant
alias vup="vagrant up"
alias vhalt="vagrant halt"
alias vssh="vagrant ssh"

# ctags
alias ctg="ctags -R ."

# dotfiles
alias df="cd ~/dotfiles"
alias srcz="source ~/.zshrc"
